<!-- BEGIN LOGIN -->

<div class="content" style="position:relative;"> 
	<div style="position:absolute; float:left;left:30px; top:70px" id="message"> 
		<font color='red'></font> 
		<font color='green'></font> 
	</div>
  <!-- BEGIN LOGIN FORM -->
  <form name="login" action="" method="post"  class="login-form" >
    <h3 class="form-title">Login to your account</h3>
     <% if(typeof err != "undefined" && err==0){%>
		<div class="alert alert-success display-show" id="message">
		  <button class="close" data-close="alert"></button>
		  <span><%= message %></span> 
		</div>
	<% }else if(typeof err != "undefined" && err==1){%>
		<div class="alert alert-danger display-show" id="message">
		  <button class="close" data-close="alert"></button>
		  <span><%= message %></span> 
		</div>
	<% }else{ %>	
		<div class="alert alert-danger display-hide" id="message">
		  <button class="close" data-close="alert"></button>
		  <span>Enter username and password.</span> 
		</div>
    <% } %>
    <div class="form-group"> 
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">Username</label>
      <div class="input-icon"> <i class="fa fa-user"></i>
        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" value="abdul"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Password</label>
      <div class="input-icon"> <i class="fa fa-lock"></i>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" value="12345678"/>
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn blue pull-right"> Login <i class="m-icon-swapright m-icon-white"></i> </button>
    </div>
    <!--<div class="forget-password">
      <h4>Forgot your password ?</h4>
      <p> no worries, click <a href="javascript:;" id="forget-password"> here </a> to reset your password. </p>
    </div>-->
  </form>
  <!-- END LOGIN FORM --> 
</div>
<!-- END LOGIN --> 
