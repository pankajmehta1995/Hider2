      <script type="text/javascript">
          $(document).ready(function(){

          jQuery.validator.addMethod("add", function(value, element) {
            // allow any non-whitespace characters as the host part
            // return this.optional( element ) || /^[ A-Za-z./#&+-]*$/.test( value );
            return this.optional(element) || /^[a-zA-Z0-9 ]+$/i.test(value);
          }, "Only characters and numbers are allowed");
         $("#mov").validate({
           
           errorElement: 'span', //default input error message container
           errorClass: 'help-block', // default input error message class
           focusInvalid: false, // do not focus the last invalid input
           ignore: [],
           debug: true,
           rules: {

             regno: {
               required:true,
               add: true

             },
             type: {
               required: true,
               add: true
             },

             make: {
               required: true,
               add: true
             },             
             model: {
               required: true,
               add: true               
             }

           },
            messages: {
              regno: {
                required: "Registration Number can not be empty",
             },
             type: {
                required: "Vehicle Type can not be empty", 
             },
             make: {
                required: "Make can not be empty",
             },
             model: {
                required: "Model can not be empty",
             }

           },
           invalidHandler: function (event, validator) { //display error alert on form submit  
             $('.alert-danger', $('#frm')).show();
           },      highlight: function (element) { // hightlight error inputs
             $(element)
               .closest('.form-group').addClass('has-error'); // set error class to the control group
           },      success: function (label) {
             label.closest('.form-group').removeClass('has-error');
             label.remove();
           },      errorPlacement: function (error, element) {
             error.insertAfter(element.closest('.form-control'));
           },      submitHandler: function (form) {
             form.submit();
           }
         });
      });  

    </script> 