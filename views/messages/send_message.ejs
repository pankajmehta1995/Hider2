<div role="main">
   <!--27-04--><section class="banner_area">
              <div class="layer">
                    <div class="container">
                     <div class="banner_content">
                      <h3 title="Private Message"><img class="left-img" src="/frontend/images/left-heartline.png" alt="">Private Message<img class="right-img" src="/frontend/images/right-heartline.png" alt=""></h3>
                    </div>
                 </div>
             </div>
        </section>


    <div class="messagep-page">
        <div class="container-fluid">
            <div class="message-field">   
               <div class="row">
                  <div class="col-md-12">
                    <div class="message-details">
                      <h1>Send<span> Message</span></h1>
                      <img src="/frontend/images/red-line.png">
                      <div id="message"  style="margin:0px 0 0px 0px; width:100%;">
                         <font color='green'> <%= messages.successmsg; %> </font> 
                          <font color='red'> <%= messages.errormsg; %> </font> 
                         
                      </div>
                            <form id="send_message" name="send_message" class="form-detail" name="send_message" action="/messages/send_message" method="post">
                              <input type="hidden" id="receiver_id" name="receiver_id" value="<%= receiver_id %>">
                              <input type="hidden" id="sender_id" name="sender_id" value="<%= currentUser.id %>">
                              <input type="hidden" id="conversation_type" name="conversation_type" value="1">
                                <!--div class="form-group">
                                  <input type="text" name="email" placeholder="Your email address" class="inp-detail" data-validation="email" data-validation-error-msg="Email not correct">
                                </div-->
                               <div class="form-group">
                                   <textarea class="form-control inp-detail s-message" id="msg" name="message" rows="5" placeholder="Message" ></textarea></div>
                                <div class="form-group">
                                  <input type="submit" name="Submit" value="SEND" class="s-b-message">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
           </div>
        </div>
    </div>
</div>  


      <script type="text/javascript">
       $(document).ready(function(){
         $("#send_message").validate({
           
           errorElement: 'span', //default input error message container
           errorClass: 'help-block', // default input error message class
           focusInvalid: false, // do not focus the last invalid input
           ignore: [],
           debug: true,
           rules: {
             message: {
               required:true
             }
           },
            messages: {
             message: {
              
               required: "Please write your message",
             }
           },
           invalidHandler: function (event, validator) { //display error alert on form submit  
             $('.alert-danger', $('#send_message')).show();
           },      highlight: function (element) { // hightlight error inputs
             $(element)
               .closest('.form-group').addClass('has-error'); // set error class to the control group
           },      success: function (label) {
             label.closest('.form-group').removeClass('has-error');
             label.remove();
           },      errorPlacement: function (error, element) {
             error.insertAfter(element.closest('.form-control'));
           },      submitHandler: function (form) {
             form.submit();
           }
         });
       });
    </script> 
